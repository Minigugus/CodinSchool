{
  "name": "codinschool",
  "version": "4.0.0",
  "private": true,
  "scripts": {
    "servir": "node -r esm ./index.js",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "lint:no--fix": "vue-cli-service lint --no-fix",
    "apollo": "vue-cli-service apollo:watch --run \"vue-cli-service serve\"",
    "apollo:run": "vue-cli-service apollo:run"
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "bcrypt": "^3.0.6",
    "core-js": "^3.0.1",
    "graphql-type-json": "^0.3.0",
    "highlight.js": "^9.15.6",
    "jsonwebtoken": "^8.5.1",
    "lowdb": "^1.0.0",
    "mkdirp": "^0.5.1",
    "nodemailer": "^6.1.1",
    "pg": "^7.10.0",
    "pg-hstore": "^2.3.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-vue": "^0.8.1",
    "sequelize": "^5.7.3",
    "vue": "^2.6.10",
    "vue-apollo": "^3.0.0-beta.28",
    "vue-codemirror": "^4.0.6",
    "vue-router": "^3.0.6",
    "vue2-editor": "^2.6.6",
    "vuedraggable": "^2.20.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.6.0",
    "@vue/cli-plugin-eslint": "^3.6.0",
    "@vue/cli-service": "^3.6.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-vue": "^5.2.2",
    "graphql-tag": "^2.10.1",
    "lint-staged": "^8.1.5",
    "vue-cli-plugin-apollo": "^0.19.2",
    "vue-template-compiler": "^2.6.10"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.gql": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
